{
  "name": "koa-hot-reload",
  "version": "1.0.0",
  "description": "build koa app with hot-reload ",
  "main": "index.js",
  "scripts": {
    "build:watch": "rimraf output && webpack --config scripts/webpack.dev.js",
    "build": "webpack --config scripts/webpack.prod.js",
    "dev": "sleep 2 && node output/main.js",
    "start": "run-p build:watch dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "express": "^4.16.3",
    "koa": "^2.5.2",
    "node-fetch": "^2.2.0",
    "npm-run-all": "^4.1.3",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "rimraf": "^2.6.2",
    "start-server-webpack-plugin": "^2.2.5",
    "webpack": "^4.16.3",
    "webpack-cli": "^3.1.0",
    "webpack-command": "^0.4.1",
    "webpack-dev-server": "^3.1.5",
    "webpack-node-externals": "^1.7.2"
  }
}
